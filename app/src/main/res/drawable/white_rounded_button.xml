<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#FFD28E"/>
            <stroke
                android:color="#FF5F2D"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#FFFFFF"/>
            <stroke
                android:color="#A5A5A5"
                android:width="1dp"/>
            <corners
                android:radius="50dp"/>
        </shape>
    </item>

</selector>